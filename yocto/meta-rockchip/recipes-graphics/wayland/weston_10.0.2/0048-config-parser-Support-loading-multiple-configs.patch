 	while (fgets(line, sizeof line, fp)) {
 		switch (line[0]) {
@@ -436,8 +461,7 @@ weston_config_parse(const char *name)
 				fprintf(stderr, "malformed "
 					"section header: %s\n", line);
 				fclose(fp);
-				weston_config_destroy(config);
